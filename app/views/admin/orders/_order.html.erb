<tr>
  <td><%= order.created_at.strftime(Settings.date_format) %></td>
  <td><%= order.user.name %></td>
  <td><%= order.user_phone %></td>
  <td><%= order.user_address %></td>
  <td>
    <%= total_price(order) %>
  </td>
  <td>
    <h5>
      <span class="badge btn <%= Settings.send(order.status) %>">
        <%= t "status_order.#{order.status}" %>
      </span>
    </h5>
  </td>
  <td>
    <%= link_to [:admin, order], class: "btn btn-icon btn-success" do %>
      <i class="fas fa-eye"></i>
    <% end %>
  </td>
</tr>
