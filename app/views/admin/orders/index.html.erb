<div class="content">
  <%= render "admin/shared/content_header", key: t(".key"), value: t(".value") %>
  <div class="row">
    <% if @orders.present? %>
    <div class="col-md-12 col-sm-12 ">
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th><%= t ".created_order" %></th>
                      <th><%= t ".name" %></th>
                      <th><%= t ".phone" %></th>
                      <th><%= t ".address" %></th>
                      <th><%= t ".total_price" %></th>
                      <th><%= t ".status" %></th>
                      <th><%= t ".action" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @orders %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <%== pagy_bootstrap_nav @pagy %>
        </div>
      </div>
    </div>
    <% else %>
      <h2><%= t ".no_order" %><h2>
    <% end %>
  </div>
</div>
