<% provide :title, @user.name %>
<div class="content">
  <%= render "admin/shared/content_header", key: t(".key"), value: t(".value") %>
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
          <div class="x_panel">
            <div class="x_title">
              <ul class="nav navbar-right panel_toolbox">
                <%= link_to admin_users_path, class: "btn btn-danger" do %>
                  <i class="fa-solid fa-arrow-left-long"></i>
                <% end %>
              </ul>
            <br>
        </div>
        <div class="x_content">
          <div class="row">
            <div class="col-sm-12">
              <div class="card-box table-responsive">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th><%= t ".image" %></th>
                      <th><%= t ".name" %></th>
                      <th><%= t ".email" %></th>
                      <th><%= t ".address" %></th>
                      <th><%= t ".phone" %></th>
                      <th><%= t ".order total" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th><%= gravatar_for @user %></th>
                      <td><%= @user.name%></td>
                      <td><%= @user.email %></td>
                      <td><%= @user.address %></td>
                      <td><%= @user.phone %></td>
                      <td><%= @user.orders.count %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
