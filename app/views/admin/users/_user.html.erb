<tr>
  <td><%= gravatar_for user, size: Settings.user.gavatar_size50 %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.address %></td>
  <td><%= user.phone %></td>
  <td><%= user.admin? ? "Admin" : "User" %></td>
  <td>
    <%= link_to [:admin, user], class: "btn btn-icon btn-primary" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <% unless user.admin? %>
      <%= link_to [:admin, user], class: "btn btn-icon btn-primary", method: :delete,
      data: {confirm: t(".you_sure")}, class: "btn btn-danger" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    <% end %>
  </td>
</tr>
