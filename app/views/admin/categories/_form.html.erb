<%= form_for [:admin, @category] do |f| %>
  <div class="col-md-6 mb-4">
    <%= f.label :name, t(".category_name") %>
    <%= f.text_field :name, class: "form-control" %>
    <%= raw error_message(@category, :name) %>
  </div>
  <div class="col-md-6 mb-4">
    <%= f.label :parent_id, t(".parent") %>
    <%= f.select :parent_id, category_collect, {include_blank: false}, class: "form-control"  %>
    <%= raw error_message(@category, :parent_id) %>
  </div>
  <div class="d-grid gap-2 d-md-block">
    <%= link_to t(".back"), admin_categories_path, class: "btn btn-danger" %>
    <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
  </div>
<% end %>
