<div class="content">
  <%= render "admin/shared/content_header", key: t(".key"), value: t(".value") %>
  <div class="container-fluid">
      <div class="row p-3">
        <%= link_to t(".new_category"), new_admin_category_path, class: "btn btn-success" %>
      </div>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th><%= t ".parent" %></th>
              <th><%= t ".actions" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) %>
        <br>
      </div>
    </div>
  </div>
</div>
