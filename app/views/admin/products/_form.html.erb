<%= form_with(model: [:admin, @product], label_errors: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control"%>
    <%= raw error_message(@product, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, t(".description") %>
    <%= f.text_area :description, size: "50x6" , class: "form-control"%>
    <%= raw error_message(@product, :description) %>
  </div>
  <div class="form-group">
    <%= f.label :price, t(".price") %>
    <%= f.number_field :price, class: "form-control"%>
    <%= raw error_message(@product, :price) %>
  </div>
  <div class="form-group">
    <%= f.label :stock_quantity, t(".quantity") %>
    <%= f.number_field :stock_quantity, class: "form-control" %>
    <%= raw error_message(@product, :stock_quantity) %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, t(".category") %>
    <%= f.select :category_id, category_options ,{include_blank: t(".choose")}, {class: "form-control"} %>
    <%= raw error_message(@product, :category_id) %>
  </div>
  <div class="form-group">
    <%= f.label :images, t(".image") %>
    <%= f.file_field :images, multiple: true, accept: "image/jpeg,image/png", class: "form-control" %>
    <%= raw error_message(@product, :images) %>
    <div class="col">
      <div class="row">
        <% @product.images.each do |image| %>
          <div class="col-4 p-2">
            <%= image_tag image, class: "product-image" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
<% end %>
