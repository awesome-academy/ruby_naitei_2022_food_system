<div class="product product-style-2 equal-elem ">
  <div class="product-thumnail">
    <%= link_to product_path product do %>
      <figure><%= image_tag product.images[0], class: "dish-img" %></figure>
    <% end %>
    <div class="wrap-btn">
      <%= form_with(url: carts_path(id: product.id ), html: {class:"add-to-cart", :'data-id' => product.id} ) do |f| %>
        <%= hidden_field_tag :qty, 1, id: "product_quantity_".concat(product.id.to_s) %>
        <%= f.submit t(".add_to_cart"), class: "function-link", id: "submit-add-to-cart" %>
      <% end %>
    </div>
  </div>
  <div class="product-info">
    <a href="#" class="product-name"><span><%= product.name %></span></a>
    <div class="wrap-price">
      <span class="product-price">
        <%= price_format product.price %>
      </span>
    </div>
  </div>
</div>
