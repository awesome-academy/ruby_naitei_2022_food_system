<li class="comment byuser comment-author-admin bypostauthor even thread-even depth-1" id="li-comment-20">
  <div id="comment-20" class="comment_container">
    <%= gravatar_for post.user, size: Settings.user.gavatar_size50 %>
    <div class="comment-text">
      <div class="star-rating">
        <span class="width-<%= stars_to_percent post.star %>-percent"></span>
      </div>
      <p class="meta">
        <strong class="woocommerce-review__author"><%= post.user_name %></strong>
        <span class="woocommerce-review__dash"><%= post.updated_at.strftime(Settings.date_format) %></span>
      </p>
      <div class="description">
        <p><%= post.comment %></p>
      </div>
    </div>
  </div>
</li>
