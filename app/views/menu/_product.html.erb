<li class="col-lg-4 col-md-6 col-sm-6 col-xs-6 ">
  <div class="product product-style-3 equal-elem ">
    <div class="product-thumnail">
      <%= link_to product_path(product), "data-turbolinks": "false" do %>
        <figure><%= image_tag product.images[0], class: "dish-img" %></figure>
      <% end %>
    </div>
    <div class="product-info">
      <a href="#" class="product-name"><span><%= product.name %></span></a>
      <div class="wrap-price"><span class="product-price"><%= price_format product.price %></span></div>
      <%= form_with(url: carts_path(id: product.id), html: {class:"add-to-cart", :'data-id' => product.id}) do |f| %>
        <%= hidden_field_tag :qty, 1, id: "product_quantity_".concat(product.id.to_s) %>
        <%= f.submit t(".add_to_cart"), class: "menu-add-to-cart", id: "submit-add-to-cart_".concat(product.id.to_s) %>
      <% end %>
    </div>
  </div>
</li>
