<li class="pr-cart-item">
  <div class="product-image">
    <figure><%= image_tag product.images[0] %></figure>
  </div>
  <div class="product-name">
    <%= link_to product.name, product_path(product) %>
  </div>
  <div class="price-field produtc-price"><p class="price"><%= price_format product.price %></p></div>
  <div class="quantity">
    <div class="quantity-input">
      <input type="text" name="product-quatity" value="<%= qty product %>" data-max="120" pattern="[0-9]*" >
      <a class="btn btn-increase" href="#"></a>
      <a class="btn btn-reduce" href="#"></a>
    </div>
  </div>
  <div class="price-field sub-total"><p class="price"><%= price_format sub_total(product.id) %></p></div>
  <div class="delete">
    <a href="#" class="btn btn-delete" title="">
      <i class="fas fa-times-circle" aria-hidden="true"></i>
    </a>
  </div>
</li>
