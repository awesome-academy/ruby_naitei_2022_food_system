<% provide :title, t(".title") %>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
      <h1><%= t(".title") %></h1>
      <br>
        <%= form_for(@user) do |f| %>
          <%= render "shared/error_messages" %>

          <div class="form-outline mb-4">
            <%= f.label :name, t(".form.name") %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :email, t(".form.email") %>
            <%= f.email_field :email, class: "form-control" %>
          </div>


          <div class="form-outline mb-4">
            <%= f.label :password, t(".form.password") %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.label :password_confirmation, t(".form.password_confirmation") %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="submit">
            <%= f.submit t(".form.btn_submit"), class: "btn btn-primary" %>
          </div>
          <hr>
          <%= t ".form.have_account" %><%= link_to t(".form.login"), login_path %>
        <% end %>
      </div>
    </div>
  </div>
</section>
