<%= form_for @user do |f| %>
  <div class="form-outline mb-4">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control" %>
    <%= raw error_message(@user, :name) %>
  </div>
  <div class="form-outline mb-4">
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= raw error_message(@user, :email) %>
  </div>
  <div class="form-outline mb-4">
    <%= f.label :password, t(".password") %>
    <%= f.password_field :password, class: "form-control" %>
    <%= raw error_message(@user, :password) %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password_confirmation, t(".password_confirmation") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    <%= raw error_message(@user, :password_confirmation) %>
  </div>
  <br>
  <%= link_to t(".back"), user_path, class: "btn btn-danger" %>
  <%= f.submit yield(:btn_text), class: "btn btn-primary" %>

<% end %>
